@import './functions.styl'

// app global css
body {
  no-user-select()
  height 100vh
  overflow hidden
  position fixed
  top 0
  color $secondary
  font-family Roboto, Arial
}

.btn {
  margin 0px
  background-color white
  border 1px solid $grey-4
  border-radius 5px
  padding .1em .5em
  outline none
  transition .2s ease-in-out
  
  &:hover {
    cursor pointer
    background-color $grey-2
  }
  
  &:active {
    background-color $grey-5
  }
}

// Scroll bar
* {
  &::-webkit-scrollbar {
    width .3em
  }

  /* Track */
  &::-webkit-scrollbar-track {
    background-color $grey-2;
    border-radius: 1000px

    &:hover {
      width 10px
    }
  }

  /* Handle */
  &::-webkit-scrollbar-thumb {
    background-color $grey-5;
    border-radius: 1000px
    max-height .3em

    /* Handle on hover */
    &:hover {
      width 12px
      background-color $grey-6;
    }
  }
}
.pane {
  height 100vh
}

.float-right {
  margin: 0
  margin-left: auto
}

.vertical-panes {
  width: 100%;
  height: 100%;

  & > .multipane-resizer {
    z-index: 10
    height: 100vh!important
  }

  & .pane {
    text-align left
    background-color #fff
  }

  & .pane:first-child {
    border-right 1px solid #ccc
  }

  & .pane:last-child {
    border-left 1px solid #ccc
  }
}

& .q-toolbar {
  display flex
  min-height 2.5em
  height 3vh
  border-bottom 1px solid $grey-4
}

.q-list {
  & .q-item {
    min-height 2.5em
    height 2.5em
    transition 0s!important

    & * {
      transition 0s!important
    }
  }
}


@media print {
  #main, #drawer {
    display none
  }

  #toolbar {
    display none
  }

  #viewer {
    height 100%
    padding 0
    overflow hidden
  }
}
