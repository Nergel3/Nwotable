// app global css
body {
  height 100vh
  max-height 100vh
  overflow hidden

  & .dragger {
    min-width 1em
    height 100vh
    float right
    cursor col-resize
    background-color white
  }
}

#drawer {
  min-width: .5em;
  width 800px
  height 100vh
  // overflow-y scroll
  overflow hidden
  display flex

  & .q-list {
    height 100vh
    flex 10
    display inline-block
  }
}

.q-layout {
  display flex
}

$header-border = 1px solid $grey-4

#main {
  border-right $header-border

  .q-item, .q-focus-helper {
    height 3em
  }

  .list {
    display flex
  }

  .q-list {
    height 100%
    width 100%
    // overflow-y scroll
  }
}

#viewer {
  width 100%
}

#main, #viewer{
  width 900px

  & .q-toolbar {
    min-height 3em
    border-bottom $header-border
    

    #search-field {
      border $header-border
      border-radius 5px
      overflow hidden
      padding .1em .5em
      margin-right 1em
      background-color white

      & * {
        border none
        outline none
        color black
      }
    }

      &active {
        background-color $grey-3
      }
    }

    & i {
      font-size 1.2em
      justify-content center
      align-items center
    }

    .btn-toolbar {
      background-color white
      border $header-border
      border-radius 5px
      padding .1em .5em
      outline none
      transition .2s ease-in-out

      &hover {
        cursor pointer
      }

    }

  .q-bar {
    padding 0 1em
    background-color white
    color #908484
    max-height 1.5em
    border-bottom $header-border

    &hover {
      cursor pointer
    }
    
    & div {
      font-size .8em
    }

    & .q-icon {
      transition .1s ease-in-out
    }

    & .titleSort {
      transform rotate(180deg)
    }
  }
}
