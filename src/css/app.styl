@import './functions.styl'

// app global css
body {
  no-user-select()
  max-height 100vh
  overflow hidden
  position absolute
  top 0
  color $secondary
}

.pane {
  height 100vh
}

.float-right {
  margin: 0
  margin-left: auto
}

.vertical-panes {
  width: 100%;
  height: 100%;

  & > .multipane-resizer {
    z-index: 10000
    height: 100vh!important
  }

  & .pane {
    text-align left
    background-color #fff
  }

  & .pane:first-child {
    border-right 1px solid #ccc
  }

  & .pane:last-child {
    border-left 1px solid #ccc
  }
}

& .q-toolbar {
  display flex
  min-height 2.5em
  height 3vh
  border-bottom $header-border
}

.q-list {
  & .q-item {
    transition .01s ease-in-out!important
  }
}
