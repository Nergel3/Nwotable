// Markdown processed styles

#container {
  height 96vh
  word-break break-word
  
  & #viewer {

    & * {
      max-width 99%
    }

    // Headers
    h1, h2, h3, h4, h5, h6 {
      font-weight 500
      line-height 1.5em
    }

    h1, h2 {
      border-bottom 1px solid $grey-4
    }

    for n in 1 2 3 4 5 6 {
      & h{n} {
        font-size 2rem - n * .15rem
        margin n * .5rem 0 
      }
    }

    & pre {
      background-color $grey-3
      padding-left 1em
    }

    & code {
      background-color $grey-3
      border-radius 3px
      padding .2em .4em
    }

    & table {
      border-collapse collapse
      border-spacing 0px
      min-width 50%

      $table-border = 1px solid $grey-5

      & th {
        border-top $table-border
        border-bottom 1.2px solid $grey-6
        border-right $table-border
        padding .3em
        font-size 1.2em

        &:nth-child(1) {
          border-left $table-border
        }
      }

      & tr {
        border $table-border

        & td {
          padding .3em
          border-left $table-border
        }
      }
    }

    & blockquote {
      background-color $grey-2
      margin .5em 0
      padding-left 1em
      border-left 5px solid $grey-5
    }
  }
}