/* BASICS */

.CodeMirror {
  /* Set height, width, borders, and global font properties here */
  background-color $grey-2!important
  height: 93vh!important;
  color: $grey-7!important;

  &-scroll {
    height: 93vh!important;
  }
}

.cm-s-nergel {
  & .cm-quote {
    
  }

  & .cm-header {
    color #e3345d
  }

  & .cm-link {
    color #6f42c1
  }

  & .cm-url {
    color #ed9140
  }

  & .cm-tag {
    color #2f9146
  }

  & .cm-attribute {
    color #6f42c1
    font-weight bold
  }

  & .cm-comment {
    color #2172cf
  }

  & .cm-string {
    color #a542c1
  }
}
