#massilia {
  padding 1em 0 0 .5em
  width: 100%
  height: 100%
  box-sizing border-box
  cursor text

  & .line {
    width 100%
    height 1em

    & .line-focus {
      background-color #00000010
    }

    & #massilia-cursor {
      height 1em
      width 1px
      background-color #000000
      animation .7s blinks infinite
    }
  }
}

@keyframes blinks {
  0% {
    opacity 0
  }

  25% {
    opacity 25%
  }

  50% {
    opacity 1
  }

  75% {
    opacity 75%
  }

  100% {
    opacity 0
  }
}