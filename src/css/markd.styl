// Markdown processed styles

#container {
  height 95vh
  word-break break-word
  
  & #viewer {
    // Headers
    h1, h2, h3, h4, h5, h6 {
      font-weight 500
      margin-top 0px
      margin-bottom 1em
      line-height 1.5em
      border-bottom 1px solid #2f2f2f2f
    }

    & h1 {
      font-size 2.5rem
    }

    & h2 {
      font-size 2rem
    }

    & h3 {
      font-size 1.75rem
    }

    & h4 {
      font-size 1.5rem
    }

    & h5 {
      font-size 1.25rem
    }

    & h6 {
      font-size 1rem
    }

    & pre {
      background-color $grey-3
    }

    & table {
      border-collapse collapse
      border-spacing 0px
      width 99%

    $table-border = 1px solid $grey-5

      & th {
        border-top $table-border
        border-bottom 1.5px solid $grey-8
        border-right $table-border
        padding 0 .3em

        &:nth-child(1) {
          border-left $table-border
        }
      }

      & tr {
        border $table-border

        & td {
          padding .3em
          border-left $table-border
        }
      }
    }
  }
}