@font-face
  font-family hack
  src url(./fonts/Hack-Regular.ttf)

#markdown {
  width 100%

  .hack-font {
    font-family hack
    font-size 1.3em
  }

  & #container {
    height 95vh
    word-break break-word

    // Headers
    h1, h2, h3, h4, h5, h6 {
      font-weight 500
      margin-top 0px
      margin-bottom 1em
      line-height 1.5em
      border-bottom 1px solid #2f2f2f2f
    }

    & h1 {
      font-size 2.5rem
    }

    & h2 {
      font-size 2rem
    }

    & h3 {
      font-size 1.75rem
    }

    & h4 {
      font-size 1.5rem
    }

    & h5 {
      font-size 1.25rem
    }

    & h6 {
      font-size 1rem
    }
  
    & #editor {
      padding-left 1em
      background-color #F6F6F6
      color #555
      padding-top 1em
      outline none
      width 100%
      height 100%
      box-sizing border-box
      border none
      resize none
      max-height 95vh
      font-size 1em
      font-weight 300


      & * {
        transition .1s ease-in-out
        color #333
      }
    }

    & #viewer {
      padding-top 1em
      padding-left 1em
      height 100%
      overflow-y auto
      font-size 1.3em
      font-weight 400

      & * {
        max-width 99%
      }
    }
  }
}