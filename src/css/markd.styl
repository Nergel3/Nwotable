// Markdown processed styles

#container {
  height 96vh
  word-break break-word
  
  & #viewer {
    font-size 1.2em

    & * {
      max-width 99%
    }

    // Headers
    h1, h2, h3, h4, h5, h6 {
      font-weight 500
      line-height 1.5em
    }

    h1, h2, h3 {
      border-bottom 1px solid $grey-4
    }

    for n in 1 2 3 4 5 6 {
      & h{n} {
        font-size 2rem - n * .15rem
        margin (2 / n) * .5rem 0
      }
    }

    & pre {
      padding-left 1em
      background-color $grey-2
    }

    & code {
      background-color $grey-2
      border-radius 3px
      padding .2em .4em
    }

    & table {
      border-collapse collapse
      border-spacing 0px
      min-width 50%

      $table-border = 1px solid $grey-5

      & th {
        border-top $table-border
        border-bottom 1.2px solid $grey-6
        border-right $table-border
        padding .5em 1em
        font-size 1.2em

        &:nth-child(1) {
          border-left $table-border
        }
      }

      & tr {
        border $table-border

        & td {
          padding 1em
          border-left $table-border
        }
      }
    }

    & blockquote {
      background-color rgba(255,185,128,0.15)
      margin .5em 0
      padding-left 1em
      border-left 5px solid rgba(255,185,128,0.75)
    }

    & a {
      text-decoration none
      color $secondary
      background-image linear-gradient( transparent 0%, transparent calc(50% - 8px), rgba(255, 185, 128, .35) calc(50% - 8px), rgba(255, 185, 128, .35) 100% );
      transition .2s ease-in-out
      background-size 100% 200%
      background-position 0 0

      &:hover {
        transparent 0%, transparent calc(50% - 8px), rgba(239, 108, 0, 1) calc(50% - 8px), rgba(239, 108, 0, 1) 100%
        background-position 0 100%
      }
    }
  }
}